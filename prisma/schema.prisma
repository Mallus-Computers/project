generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String       @id @default(uuid())
  names     String
  email     String    @unique
  createdAt DateTime  @default(now())
  password  String
  accounts  Account[]
}

model Account {
  id       String      @id @default(uuid())
  amount   Float
  currency Currency @default(USD)
  user     User     @relation(fields: [userId], references: [id])
  userId   String
}

enum Currency {
  USD
  EUR
  NGN
}
